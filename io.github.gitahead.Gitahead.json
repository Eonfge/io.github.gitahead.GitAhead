{
  "app-id": "io.github.gitahead.Gitahead",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15",
  "sdk": "org.kde.Sdk",
  "command": "/app/usr/local/GitAhead",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    /*for git repos that require ssh keys*/
    "--socket=ssh-auth",
    "--share=network",
    "--socket=pcsc",
    /*we want access to all files under home*/
    "--filesystem=home",
    /*we use the keyring to store credentials*/
    "--filesystem=xdg-run/keyring",
    "--talk-name=org.freedesktop.secrets",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.Flatpak"
  ],
  "modules": [
    "shared-modules/libsecret/libsecret.json",
    "shared-modules/intltool/intltool-0.51.json",
    {
      "name": "intltool"
    },
    {
      "name": "git",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 $(which git) ${FLATPAK_DEST}/bin/",
        "install -Dm0755 $(which git-clang-format) ${FLATPAK_DEST}/bin/",
        "install -Dm0755 $(which git-cvsserver) ${FLATPAK_DEST}/bin/",
        "install -Dm0755 $(which git-receive-pack) ${FLATPAK_DEST}/bin/",
        "install -Dm0755 $(which git-shell) ${FLATPAK_DEST}/bin/",
        "install -Dm0755 $(which git-upload-archive) ${FLATPAK_DEST}/bin/",
        "install -Dm0755 $(which git-upload-pack) ${FLATPAK_DEST}/bin/"
      ]
    },
    {
      "name": "graphviz",
      "cleanup": [
        "/share/man",
        "/share/graphviz/doc"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.com/graphviz/graphviz/-/archive/2.47.0/graphviz-2.47.0.tar.gz",
          "sha256": "4b7f61c7c04f39b67b2c87977633d61d9f72ee6f93ff4376acdce140128431d4"
        }
      ]
    },
    {
      "name": "libgnome-keyring",
      "buildsystem": "autotools",
      "config-opts": [
        "--enable-vala=no",
        "--enable-introspection=no"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download-fallback.gnome.org/sources/libgnome-keyring/3.9/libgnome-keyring-3.9.1.tar.xz",
          "sha256": "8eaca3d4f04ba834acb6c5037b26c3f0837ee4b71ccb380e7810052f7cde381b"
        },
        {
          "type": "file",
          "path": "gitahead.patch"
        }
      ],
      "cleanup":[
        "/share/gtk-doc"
      ]
    },
    {
      "name": "gitahead",
      "buildsystem": "simple",
      "cleanup": [
        "/usr/local/share/",
        "/usr/local/man",
        "/usr/local/share/doc",
        "/usr/local/share/man",
        "/usr/local/Resources/*.html",
        "/usr/local/Resources/GitAhead.iconset",
        "/share/man"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/gitahead/gitahead.git",
          "commit":"bb747caef098140d9674990b1d79d096d1eac8df"
        },
        {
          "type": "patch",
          "path": "gitahead.patch"
        },
        {
          "type": "file",
          "path": "io.github.gitahead.Gitahead.metainfo.xml"
        },
        {
          "type": "file",
          "path": "io.github.gitahead.Gitahead.desktop"
        }
      ],
      "build-commands": [
        "mkdir -p build/release",
        "cd build/release && cmake -G Ninja -DCMAKE_BUILD_TYPE=Release -DCMAKE_LINK_DIRECTORIES=${FLATPAK_DEST} -DCMAKE_PREFIX_PATH=/usr/lib ../.. && ninja &&  DESTDIR=${FLATPAK_DEST} ninja install",
        "cp ${FLATPAK_DEST}/usr/local/Resources/GitAhead.iconset/icon_512x512.png io.github.gitahead.Gitahead.png",
        "install -D io.github.gitahead.Gitahead.png --target-directory=${FLATPAK_DEST}/share/icons/hicolor/512x512/apps/",
        "install -D io.github.gitahead.Gitahead.metainfo.xml --target-directory=${FLATPAK_DEST}/share/metainfo/",
        "install -D io.github.gitahead.Gitahead.desktop --target-directory=${FLATPAK_DEST}/share/applications/"
      ]
    }
  ]
}
